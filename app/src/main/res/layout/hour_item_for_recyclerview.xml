<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable

            name="datatemp"
            type="com.example.weather_of_planet.view.models.models_for_database.Temp_with_image" />

    </data>

    <RelativeLayout

        android:layout_width="40dp"
        android:layout_height="100dp"
        android:layout_marginLeft="2dp">

        <TextView
            android:id="@+id/hour_hour"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_alignParentStart="true"
            android:background="#E68E8E"
            android:text="@{datatemp.time}"
            android:textAlignment="center"
            android:layout_marginBottom="2dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/percent_of_rain"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_below="@id/hour_hour"
            android:background="#464A61"
            android:layout_marginBottom="2dp"
            android:text="@{datatemp.humidity}"
            android:textAlignment="center"
            android:textColor="#9EBA37" />


        <ImageView
            android:id="@+id/icon_of_weather"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/percent_of_rain"
            android:padding="2dp"

            android:layout_marginBottom="2dp"
            />

        <TextView

            android:id="@+id/deggres"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_below="@id/icon_of_weather"
            android:background="#D7CBDD"
            android:text="@{datatemp.temp_c}"
            android:layout_marginBottom="2dp"
            android:textAlignment="center"
            android:textColor="#000000"


            />



    </RelativeLayout>
</layout>