<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

<data>
    <variable
        name="data"
        type="com.example.weather_of_planet.view.models.models_for_database.DayWeather" />
</data>
    <LinearLayout
        android:id="@+id/AllDayDetails"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF394653"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/DayName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="5dp"
            android:text="@{data.dayName}"
            android:textColor="@color/white"
            android:paddingTop="15dp"
            android:textSize="17sp"
            android:layout_weight="2" />
        <ImageView
            android:id="@+id/Weather_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/percentOfHumidity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@{data.humidity}"
            android:textColor="@color/white"
            android:paddingTop="15dp"
            android:layout_weight="2" />
        <TextView
            android:id="@+id/max_temp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@{data.max_temp}"
            android:textColor="@color/white"
            android:paddingTop="15dp"
            android:textSize="15sp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/min_temp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@{data.min_temp}"
            android:textColor="@color/white"
            android:paddingTop="15dp"
            android:textSize="13sp"
            android:layout_weight="1" />

    </LinearLayout>

</layout>
