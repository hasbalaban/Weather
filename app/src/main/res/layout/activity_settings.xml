<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundActivities">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:scaleType="center"
            android:src="@drawable/arkaplan_setting_ust"/>

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/landspace" />


        <TextView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="100dp"
            android:paddingTop="5dp"
            android:text="Seçeneklerim"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="150dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:paddingLeft="15dp"
                android:text="Karanlık Mod"
                android:textColor="?attr/generalTextColor"
                android:textSize="25dp" />

            <ToggleButton
                android:id="@+id/Mode"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:textOff="Kapalı"
                android:textOn="Açık" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/About"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="300dp">

            <TextView
                android:id="@+id/about"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="About"
                android:textColor="?attr/generalTextColor"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/about"
                android:background="#918989" />

            <TextView
                android:id="@+id/licance"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@id/about"
                android:layout_marginTop="25dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:fontFamily="sans-serif-black"
                android:text="Licance @copyRights-Balaban2021"
                android:textColor="?attr/generalTextColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/version"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@id/licance"
                android:layout_marginTop="25dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Version       1.0"
                android:textColor="?attr/generalTextColor"
                android:textSize="20sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/MyAccount"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingTop="15dp"
            android:textSize="22sp"
            android:textColor="#FD0101"
            android:textAlignment="center"
            android:layout_marginTop="450dp"
            android:background="@drawable/my_accont"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
         android:text="My Twitter Account: @hesenblbn101"/>


    </FrameLayout>

</layout>