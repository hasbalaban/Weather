<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="favorite"
            type="com.example.weather_of_planet.view.models.models_for_database.Favorite" />
    </data>

    <LinearLayout
        android:id="@+id/item_favorite"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/favorite_item"
        android:longClickable="true"
        android:orientation="horizontal"
        android:padding="3dp">

        <ImageView
            android:id="@+id/weather_state_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/weathers_image"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:paddingLeft="50dp">

            <TextView
                android:id="@+id/FavoriteCity"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:paddingTop="15dp"
                android:text="@{favorite.favoriteCityName}"
                android:textColor="?attr/generalTextColor"
                android:textSize="25sp" />
